<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ousmane.firstapp.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nanodegree Apps !"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/textview1"
        android:textSize="35sp"
        android:textIsSelectable="true" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="POPULAR MOVIES"
        android:id="@+id/btn_popular_movie"
        android:layout_gravity="center_horizontal"
        android:onClick="launchApp"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="STOCK HAWK"
        android:id="@+id/btn_stock_hawk"
        android:layout_gravity="center_horizontal"
        android:onClick="launchApp"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btn_build_it_bigger"
        android:layout_gravity="center_horizontal"
        android:onClick="launchApp"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="MAKE YOUR APP MATERIAL"
        android:id="@+id/btn_app_material"
        android:layout_gravity="center_horizontal"
        android:onClick="launchApp"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="GO UBIQUITOUS"
        android:id="@+id/btn_ubiquitous"
        android:layout_gravity="center_horizontal"
        android:onClick="launchApp"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:id="@+id/btn_capstone"
        android:layout_gravity="center_horizontal"
        android:onClick="launchApp"
        android:layout_marginTop="8dp" />


</LinearLayout>
